@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@model Category

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="form-row">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="form-row">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="form-row">
            <label asp-for="ImagePath"></label>
            <input asp-for="ImagePath" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>

    </div>

</form>

